<!DOCTYPE html>
<html>
<head>
  <title>FacebookClone</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if !current_user.nil? %>
  <div class="header"> 
    <span class="logo"> facebook </span>
    <span class="nav_button"><%= link_to "Home", user_posts_url %> </span> 
    <span class="nav_button">| <%= link_to current_user.username, user_url(current_user.id)%> | </span>
    <span class="nav_button"><%= link_to "Logout", session_url, :method => :delete %></span>
    <br>
  </div>
<% end %>

<!-- <div class="content"></div>  --> <!-- for backbone -->

<%= yield %>

</body>
</html>
