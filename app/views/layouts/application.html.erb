<!DOCTYPE html>
<html>
<head>
  <title>FacebookClone</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if !current_user.nil? %>
  <div class="header"> 
    <%= link_to "Home", user_posts_url %> |
    <%= link_to current_user.username, user_url(current_user.id)%> |
    <%= link_to "Logout", session_url, :method => :delete %>
  </div>
<% end %>

<div class="content"></div>

<%= yield %>

</body>
</html>
