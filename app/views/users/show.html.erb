<h1><%=@user.username %></h1>

<%=render "follows/form", :user_id => current_user.id, :receiver => @user %>

<%=render "posts/new_post", :user_id => current_user.id %>

<div class="posts-all">
  <%@posts.reverse.each do |post|%>
    <div class="post-indiv">
      <%=render "posts/post", :post => post, :user_id => current_user.id%>
      <br>
      <%=render "comments/comments", :post => post, :user_id => current_user.id%>
    </div>
  <% end %>
</div>





