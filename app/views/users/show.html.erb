<h1><%=@user.username %></h1>

<center><%=render "follows/form", :user_id => current_user.id, :receiver => @user %></center>


<center>
  <%=link_to "Timeline", user_url(@user.id)%>
  |
  <%=link_to "Photos", user_photos_url(@user.id)%>
</center>


<div class="new-post">
  <%=render "posts/new_post", :user_id => current_user.id %>
</div>

<div class="posts-all">
  <%@posts.reverse.each do |post|%>
    <div class="post-indiv">
      <%=render "posts/post", :post => post, :user_id => current_user.id%>
      <br>
      <%=render "comments/comments", :post => post, :user_id => current_user.id%>
    </div>
  <% end %>
</div>





