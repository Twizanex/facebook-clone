<form class="new-comment" action="<%=user_post_comments_url(current_user.id,post.id)%>" method="post">
  <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
  <textarea class="textbox-comment" name="comment[body]" placeholder="Write a comment..."></textarea>
  <input type="hidden" name="comment[author_id]" value="<%=current_user.id%>">
  <input type="hidden" name="comment[post_id]" value="<%=post.id%>">
  <input class="button" type="submit" value="Post">
</form>