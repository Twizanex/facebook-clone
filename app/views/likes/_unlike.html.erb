<button 
  class="unlike-button btn" 
  like-id="<%=like.id%>" 
  post-id = "<%=post.id%>" 
  user-id="<%=current_user.id%>">
  Unlike
</button>

<span class="like-count-<%=post.id%>" data-like-count="<%=post.likes.count%>">
<% if post.likes.count > 0 %>
  ☝ <%= post.likes.count %> Likes
<% end %>
</span>
